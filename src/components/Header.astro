---
import { Icon } from 'astro-icon';
---
<header class="header">
  <div class="headerSection">
    <div class="headerContainer">
      <p class="headerTitle">Space Jelly Archive</p>
      <ul class="headerLinks">
        <li>
          <a href="https://github.com/colbyfayock/cloudinary-community-dashboard">
            <span class="sr-only">Github</span>
            <Icon class="w-6" name="mdi:github" />
          </a>
        </li>
      </ul>
    </div>  
  </div>
</header>

<style lang="scss">
.header {
  width: 100%;
  color: black;
  font-size: 1em;
  padding: 1em 0;
  margin: 0;
}

.headerSection {
  padding: 0;
  margin: .5em 0;
}

.headerContainer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  max-width: 1024px;
  padding: 0 2em;
  margin: 0 auto;
}

.headerTitle {

  font-size: 1.2em;
  font-weight: bold;
  margin: 0;

  a {
    text-decoration: none;
  }

}

.headerLinks {
  display: flex;
  list-style: none;
  padding: 0;
  margin: 0;

  li {
    margin: 0 0.8em;

    &:first-child {
      margin-left: 0;
    }

    &:last-child {
      margin-right: 0;
    }
  }

  a {
    display: inline-flex;
    align-items: center;
    justify-content: center;

    svg {
      width: 1.2em;
      height: auto;
      font-size: 1.2em;
      margin-right: 0.4em;
    }
  }
}
</style>